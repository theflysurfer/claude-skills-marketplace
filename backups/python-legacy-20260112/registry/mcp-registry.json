  "credential_manager": {
    "type": "wcm",
    "description": "Windows Credential Manager for secure API key storage",
    "prefix": "MCP_",
    "loader_script": "~/.claude/scripts/load-secrets-wcm.sh",
    "credentials": {
      "NOTION_API_TOKEN": {
        "wcm_name": "MCP_NOTION_API_TOKEN",
        "env_var": "NOTION_API_TOKEN",
        "description": "Notion API integration token",
        "how_to_get": "https://www.notion.so/my-integrations"
      },
      "NOTION_PRO_API_TOKEN": {
        "wcm_name": "MCP_NOTION_PRO_API_TOKEN",
